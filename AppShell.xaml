<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CheeseHawk.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:CheeseHawk.Views"
    Shell.FlyoutBehavior="Disabled">

	<TabBar>
		<ShellContent
        Title="CheeseHawk"
        ContentTemplate="{DataTemplate views:MainPage}" 
		Route="MainPage"/>

		<ShellContent
		Title="New User"
		ContentTemplate="{DataTemplate views:NewUserPage}" />

		<ShellContent
		Title="All Users"
		ContentTemplate="{DataTemplate views:AllUsersPage}" />

		<ShellContent
		Title="Add Contact"
		ContentTemplate="{DataTemplate views:AddContactPage}" />

		<ShellContent
		Title="About"
		ContentTemplate="{DataTemplate views:AboutPage}" />
	</TabBar>
    

</Shell>
