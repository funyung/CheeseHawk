<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 xmlns:models="clr-namespace:CheeseHawk.ViewModels"
             x:Class="CheeseHawk.Views.AboutPage"
             Title="AboutPage">
	<ContentPage.BindingContext>
		<models:About />
	</ContentPage.BindingContext>
	<VerticalStackLayout Spacing="10" Margin="30">
		<HorizontalStackLayout Spacing="5">
			<Label FontSize="22" 
				   FontAttributes="Bold" 
				   Text="{Binding Title}" 
				   VerticalOptions="End"/>
			<Label FontSize="22" 
				   Text="{Binding Version}" 
				   VerticalOptions="End"/>
		</HorizontalStackLayout>
		
		<Label Text="{Binding Message}"/>
		<Button Text="View Github Page" 
				Clicked="LearnMore_Clicked" 
				HorizontalOptions="Start"/>
	</VerticalStackLayout>
</ContentPage>