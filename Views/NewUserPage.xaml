<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 xmlns:models="clr-namespace:CheeseHawk.ViewModels"
			 xmlns:viewmodel="clr-namespace:CheeseHawk.ViewModels"
             x:Class="CheeseHawk.Views.NewUserPage"
			 x:DataType="viewmodel:NewUser"
             Title="New User">
	<ContentPage.BindingContext>
		<models:NewUser />
	</ContentPage.BindingContext>
	<VerticalStackLayout 
		Spacing="10" 
		Margin="30">
		<Entry x:Name="username"
               Placeholder="Username"  />

		<Entry x:Name="phonenumber"
               Placeholder="Phone Number" 
			   MaxLength="7"
			   Keyboard="Telephone"/>

		<Button
                x:Name="NewUserBtn"
				Text="Create User"
                SemanticProperties.Hint="Saves new user."
                Command="{Binding SaveUserCommand}"
                HorizontalOptions="Center" />
	</VerticalStackLayout>
</ContentPage>