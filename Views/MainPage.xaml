<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 xmlns:models="clr-namespace:CheeseHawk.ViewModels"
			 xmlns:viewmodel="clr-namespace:CheeseHawk.ViewModels"
             x:Class="CheeseHawk.Views.MainPage"
			 x:DataType="viewmodel:StartingPage"
			 >
	<ScrollView>
		<VerticalStackLayout
            Spacing="12"
            Padding="30"
            VerticalOptions="Center">

			<Label
                Text="Welcome to CheeseHawk"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />

            <Label
                Text="Create a user or choose an existing one"
                SemanticProperties.HeadingLevel="Level2"
                FontSize="18"
                HorizontalOptions="Center" />

            <Button
                Text="Existing User"
                Command="{Binding GoToAllUsersPageCommand}"
				IsEnabled="True"
                HorizontalOptions="Center" />

			<Button
                Text="New User"
                Command="{Binding GoToNewUserPageCommand}"
				IsEnabled="True"
                HorizontalOptions="Center" />


		</VerticalStackLayout>
    </ScrollView>

</ContentPage>
